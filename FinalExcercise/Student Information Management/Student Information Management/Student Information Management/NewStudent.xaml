<Window x:Class="Student_Information_Management.NewStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Information_Management" 
        xmlns:viewmodel="clr-namespace:Student_Information_Management.ViewModel"
        mc:Ignorable="d"
        Title="NewStudent" Height="650" Width="1000" ResizeMode="NoResize">
    <Window.DataContext>
        <viewmodel:NewStudentViewModel></viewmodel:NewStudentViewModel>
    </Window.DataContext>

    <Grid>
        <!--region format grid-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="708*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--endregion-->

        <!--region header-->
        <Border Grid.Row="0" Grid.ColumnSpan="3" BorderThickness="0,0,0,3" BorderBrush="Black"  Margin="0,0,0,5" />
        <TextBlock Grid.Row="0" Text="New Student" FontSize="24" Margin="10,0,0,10" HorizontalAlignment="Left" />
        <!--endregion-->

        <!--region Student ID-->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Student ID*" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <TextBox Grid.Row="1" Grid.Column="1" FontSize="14" TextWrapping="NoWrap" Margin="5" Grid.ColumnSpan="2"/>
        <!--endregion-->

        <!--region First Name-->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="First Name*" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <TextBox Grid.Row="2" Grid.Column="1" FontSize="14" TextWrapping="NoWrap" Margin="5" Text="{Binding Path=FirstName, ValidatesOnDataErrors=True}" Grid.ColumnSpan="2"/>
        <!--endregion-->

        <!--region Last Name-->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Name*" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <TextBox Grid.Row="3" Grid.Column="1" FontSize="14" TextWrapping="NoWrap" Margin="5" Text="{Binding Path=LastName ,ValidatesOnDataErrors=True}" Grid.ColumnSpan="2"/>
        <!--endregion-->

        <!--region Birthdate-->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Birthdate*" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <DatePicker Grid.Row="4" Grid.Column="1" FontSize="14" Margin="5,18" SelectedDate="{Binding Path=Birthdate,ValidatesOnDataErrors=True }" Grid.ColumnSpan="2"/>
        <!--endregion-->

        <!--region Gender-->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Gender" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <Grid Grid.Row="5" Grid.Column="1" Margin="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <RadioButton Grid.Column="0" GroupName="Gender" Content="Male" FontSize="14" HorizontalAlignment="Center" Margin="5" IsChecked="{Binding Path=Male}"/>
            <!--Male-->
            <RadioButton Grid.Column="1" GroupName="Gender" Content="Female" FontSize="14" HorizontalAlignment="Center" Margin="5" IsChecked="{Binding Path=Female}"/>
            <!--Female-->
        </Grid>
        <!--endregion-->

        <!--region Address-->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Address" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <TextBox Grid.Row="6" Grid.Column="1" FontSize="14" TextWrapping="NoWrap" Margin="5" Text="{Binding Path=Address}" Grid.ColumnSpan="2"/>
        <!--endregion-->

        <!--region Email-->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Email" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <TextBox Grid.Row="7" Grid.Column="1" FontSize="14" TextWrapping="NoWrap" Margin="5" Text="{Binding Path=Email}" Grid.ColumnSpan="2"/>
        <!--endregion-->

        <!--region Class-->
        <TextBlock Grid.Row="8" Grid.Column="0" Text="Class" FontSize="14" Margin="50,5,0,5" HorizontalAlignment="Left"/>
        <ComboBox Grid.Row="8" Grid.Column="1" FontSize="14" Margin="5,17" ItemsSource="{Binding Path=ListComboBox}" SelectedItem="{Binding Path=SelectedClass}" Grid.ColumnSpan="2"></ComboBox>
        <!--endregion-->

        <!--region Tool bar-->
        <Grid Grid.Row="9" Grid.ColumnSpan="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="View Transript" FontSize="14" Background="LightGray" />
            <!--button Save-->
            <Button Grid.Column="2" Content="Save" FontSize="14" Background="CornflowerBlue" Margin="0,0,15,0" Command="{Binding Path=SaveCommand}"/>
            <!--button Cancel-->
            <Button Grid.Column="3" Content="Cancel" FontSize="14" Margin="15,0,0,0" Background="IndianRed" Command="{Binding Path=CancelCommand}"/>
        </Grid>
        <!--endregion-->
    </Grid>
</Window>
